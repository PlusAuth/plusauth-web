{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "removeComments": false
  },
  "exclude": [
    "src/interfaces/**/*"
  ],
  "include": [
    "src"
  ],
  "typedocOptions": {
    "out": "./docs",
    "readme": "none",
    "categorizeByGroup": false,
    "entryPoints": ["src/index.ts"],
    "excludeProtected": true,
    "excludePrivate": true,
    "plugin": [
      "typedoc-plugin-merge-modules"
    ]
  }
}
